{
    "hostname" : "pizero1",
    "sensors" : {
        "bmp280" : {
            "enabled": true
        }
    },
    "fetchfromes": {
        "hosts":[{"host" : "osmc", "retry_on_timeout": true}],
         "index":"oswh-states", "doc_type":"state",
         "states":["pizero1.heater.target.comfort", "pizero1.heater.target.standby", "pizero1.heater.mode.comfort"],
         "wrapMeasureIn":"pizero1"
    },
    "piscript": {
        "script":"simpleHeater(measure)"
    },
    "picommander" : {
        "property" : "heater.command",
        "defaultValue" : "heaterOff",
        "channels": {"mp":{"pinout":16},"mn":{"pinout":18}},
        "commands": { 
            "heaterOn": { "mp": false, "mn": false },
            "heaterOff": { "mp": true, "mn": true }
        }
    },
    "elastic" : {
        "hosts":[{"host" : "osmc", "retry_on_timeout": true}],
        "index": "oswh-pizero1",
        "type": "sys-measure"
    },
    "stats" : {
        "updateInterval" : 5,
        "statsInterval" : 60
    }
}
