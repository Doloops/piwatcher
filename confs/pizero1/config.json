{
    "hostname" : "pizero1",
    "sensors" : {
        "bmp280" : {
            "enabled": true
        }
    },
    "elastic" : {
        "hosts":[{"host" : "osmc"}],
        "index": "oswh-pizero1",
        "type": "sys-measure"
    },
    "picommander" : {
        "hosts":[{"host" : "osmc"}],
        "index": "oswh-pizero1-cmd",
        "type": "heaterCommand",
        "property" : "state",
        "defaultValue" : "standby",
        "channels": {"mp":{"pinout":16},"mn":{"pinout":18}},
        "commands": { 
            "comfort": { "mp": false, "mn": false },
            "standby": { "mp": true, "mn": true }
        }
    },
    "stats" : {
        "updateInterval" : 5,
        "statsInterval" : 60
    }
}
