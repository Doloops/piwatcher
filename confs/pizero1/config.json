{
    "hostname" : "pizero1",
    "sensors" : {
        "bmp280" : {
            "enabled": true
        }
    },
    "piscript": {
        "hosts":[{"host" : "osmc", "retry_on_timeout": true}, {"host" : "pizero3", "retry_on_timeout": true}],
        "script":"simpleHeater(self.esClient, measure,'pizero1')"
    },
    "picommander" : {
        "property" : "heater.command",
        "defaultValue" : "heaterOff",
        "channels": {"mp":{"pinout":16},"mn":{"pinout":18}},
        "commands": { 
            "heaterOn": { "mp": false, "mn": false },
            "heaterOff": { "mp": true, "mn": true }
        }
    },
    "elastic" : {
        "hosts":[{"host" : "osmc", "retry_on_timeout": true}, {"host" : "pizero3", "retry_on_timeout": true}],
        "index": "oswh-pizero1",
        "type": "sys-measure",
        "redis":{"host":"pizero3"}
    },
    "stats" : {
        "updateInterval" : 5,
        "statsInterval" : 60
    }
}
